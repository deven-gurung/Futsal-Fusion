@model FutsalFusion.Application.DTOs.Futsal.FutsalResponseDto

@{
    ViewData["Title"] = "Futsal Overview";
}

<div class="content-page">
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Futsal Fusion</a></li>
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Futsal Overivew</a></li>
                                <li class="breadcrumb-item active">Futsal Details</li>
                            </ol>
                        </div>
                        <h4 class="page-title">Futsal Details</h4>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xxl-8 col-lg-6">
                    <div class="card">
                        <div class="card-body">
                        </div> 
                    </div>
                    <div class="card d-block">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h3 class="mt-0">@Model.FutsalName</h3>
                                <div class="dropdown">
                                    <a href="#" class="dropdown-toggle arrow-none card-drop" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="ri-more-fill"></i>
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-end">
                                        <a href="javascript:void(0);" class="dropdown-item"><i class="mdi mdi-pencil me-1"></i>Edit</a>
                                        <a href="javascript:void(0);" class="dropdown-item"><i class="mdi mdi-delete me-1"></i>Delete</a>
                                    </div>
                                </div>
                            </div>
                            @if (Model.IsExotic)
                            {
                                <div class="badge bg-secondary text-light mb-3">Exotic</div>
                            }
                            @if (Model.IsNew)
                            {
                                <div class="badge bg-primary text-light mb-3">New</div>
                            }
                            @if (Model.IsPopular)
                            {
                                <div class="badge bg-danger text-light mb-3">Popular</div>
                            }

                            <h5>@Model.FutsalPhrase</h5>
                            <h6>
                                <p class="fst-italic">@Model.FutsalLocationAddress</p>
                            </h6>
                            <p class="text-muted mb-2">
                                @Html.Raw(Model.FutsalOverview)
                            </p>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="mb-4">
                                        <h5>Initiated Date Date</h5>
                                        <p>@Model.InitiatedDate</p>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="mb-4">
                                        <h5>Total Earnings</h5>
                                        <p>Rs @Model.TotalEarnings</p>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="mb-4">
                                        <div id="tooltip-container">
                                            <h5>Meet the Personnel</h5>
                                            <a href="javascript:void(0);" data-bs-container="#tooltip-container" data-bs-toggle="tooltip" data-bs-placement="top" title="@Model.OwnerName" class="d-inline-block">
                                                <img src="~/user-images/@Model.OwnerImageUrl" class="rounded-circle img-thumbnail avatar-sm" alt="friend">
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-body">
                            <h4 class="mt-0 mb-3">Comments (5)</h4>
                            <textarea class="form-control form-control-light mb-2" placeholder="Write message" id="example-textarea" rows="3"></textarea>
                            <div class="text-end">
                                <div class="btn-group mb-2">
                                    <button type="button" class="btn btn-link btn-sm text-muted font-18"><i class="ri-attachment-2"></i></button>
                                </div>
                                <div class="btn-group mb-2 ms-2">
                                    <button type="button" class="btn btn-primary btn-sm">Submit</button>
                                </div>
                            </div>

                            <div class="d-flex align-items-start mt-2">
                                <img class="me-3 avatar-sm rounded-circle" src="~/assets/images/users/avatar-3.jpg" alt="Generic placeholder image">
                                <div class="w-100 overflow-hidden">
                                    <h5 class="mt-0">Jeremy Tomlinson</h5>
                                    There are many variations of passages of Lorem Ipsum available, but the majority have suffered alteration in some form, by injected humour, or randomised words which don't look even slightly believable. If you are going to use a passage of Lorem Ipsum, you need to be sure there isn't anything embarrassing hidden in the middle of text. All the Lorem Ipsum generators on the Internet tend to repeat predefined chunks as necessary, making this the first true generator on the Internet.
                                    <div class="d-flex align-items-start mt-3">
                                        <a class="pe-3" href="#">
                                            <img src="~/assets/images/users/avatar-4.jpg" class="avatar-sm rounded-circle" alt="Generic placeholder image">
                                        </a>
                                        <div class="w-100 overflow-hidden">
                                            <h5 class="mt-0">Kathleen Thomas</h5>
                                            Donate: If you use this site regularly and would like to help keep the site on the Internet, please consider donating a small sum to help pay for the hosting and bandwidth bill. There is no minimum donation, any sum is appreciated - click here to donate using PayPal. Thank you for your support.
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div> 
                <div class="col-lg-6 col-xxl-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title mb-3">Appointment Progress</h5>
                            <div dir="ltr">
                                <div dir="ltr">
                                    <div id="appointment-details" class="apex-charts" data-colors="#727cf5,#6c757d"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title mb-3">Courts</h5>
                            @foreach (var court in Model.Courts)
                            {
                                <div class="card mb-1 shadow-none border">
                                    <div class="p-2">
                                        <div class="row align-items-center">
                                            <div class="col-auto">
                                                <img src="~/court-images/@court.Images.FirstOrDefault()" class="avatar-sm rounded" alt="file-image" />
                                            </div>
                                            <div class="col ps-0">
                                                <a href="javascript:void(0);" class="text-muted fw-bold">@court.Title</a>, <span class="text-title">@court.Type</span>
                                                <p class="mb-0">@court.Description</p>
                                            </div>
                                            <div class="col-auto">
                                                <a href="javascript:void(0);" class="btn btn-link btn-lg text-muted">
                                                    <i class="ri-download-2-line"></i>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div> 
    </div> 
</div>

<script type="text/javascript">
    let options = {
        chart: {
            height: 380,
            type: "area"
        },
        dataLabels: {
            enabled: false
        },
        stroke: {
            width: 3,
            curve: "smooth"
        },
        colors: ["#727cf5"], 
        series: [{
            name: "Bookings",
            data: ['110', '200', '150', '195']
        }],
        legend: {
            offsetY: 5
        },
        xaxis: {
            categories: ['Mon', 'Tue', 'Wed', 'Thu'],
            title: {
                text: 'Days' 
            }
        },
        yaxis: {
            title: {
                text: 'Bookings'
            }
        },
        tooltip: {
            fixed: {
                enabled: false,
                position: "topRight"
            }
        },
        grid: {
            borderColor: "#f1f3fa"
        }
    };

    let appointments = new ApexCharts(document.querySelector("#appointment-details"), options);
    appointments.render();
</script>