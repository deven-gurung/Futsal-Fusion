@model FutsalFusion.Application.DTOs.Futsal.FutsalRequestDto

@{
    Layout = "_Layout";
    ViewData["Title"] = "Futsal Registration";
}

<div class="content-page">
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Futsal Fusion</a></li>
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Futsal</a></li>
                                <li class="breadcrumb-item active">Registration</li>
                            </ol>
                        </div>
                        <h4 class="page-title">Register a new Futsal</h4>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="mb-3 mt-3 mt-xl-0">
                                <label class="mb-0">Images</label>
                                <p class="text-muted font-14">Recommended thumbnail size 800x400 (px).</p>
                                <form asp-action="Upload" method="post" class="dropzone" id="myAwesomeDropzone" data-plugin="dropzone" data-previews-container="#file-previews"
                                      data-upload-preview-template="#uploadPreviewTemplate" enctype="multipart/form-data">
                                    <div class="fallback">
                                        <input name="imageFile" type="file"/>
                                    </div>
                                    <div class="dz-message needsclick">
                                        <i class="h3 text-muted ri-upload-cloud-2-line"></i>
                                        <h4>Drop files here or click to upload.</h4>
                                    </div>
                                </form>
                                <div class="dropzone-previews mt-3" id="file-previews"></div>
                                <div class="d-none" id="uploadPreviewTemplate">
                                    <div class="card mt-1 mb-0 shadow-none border">
                                        <div class="p-2">
                                            <div class="row align-items-center">
                                                <div class="col-auto">
                                                    <img data-dz-thumbnail src="#" class="avatar-sm rounded bg-light" alt="">
                                                </div>
                                                <div class="col ps-0">
                                                    <a href="javascript:void(0);" class="text-muted fw-bold" data-dz-name></a>
                                                    <p class="mb-0" data-dz-size></p>
                                                </div>
                                                <div class="col-auto">
                                                    <!-- Button -->
                                                    <a href="" class="btn btn-link btn-lg text-muted" data-dz-remove>
                                                        <i class="ri-close-line"></i>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <form data-ajax="true" data-ajax-method="post" asp-action="Register" enctype="multipart/form-data" class="needs-validation" novalidate data-ajax-success="onSuccess">
                        <div class="card">
                            <div class="card-body">
                                @Html.AntiForgeryToken()
                                <div class="row">
                                    <div class="col-xl-6">
                                        <div class="mb-3">
                                            <label class="form-label">Futsal Name</label>
                                            <input type="text" class="form-control" placeholder="Enter the futsal name" asp-for="FutsalName" autocomplete="off" required>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Phrase Overview</label>
                                            <input type="text" class="form-control" placeholder="Enter the futsal slogan" asp-for="FutsalPhrase" autocomplete="off" required>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Description</label>
                                            <textarea class="form-control" id="project-overview" rows="5" placeholder="Enter some brief about futsal.." autocomplete="off" asp-for="FutsalDescription"></textarea>
                                        </div>
                                    </div>
                                    <div class="col-xl-6">
                                        <div class="mb-3">
                                            <label class="form-label">Location Address</label>
                                            <input type="text" class="form-control" placeholder="Enter the location address of the futsal" autocomplete="off" asp-for="FutsalLocationAddress" required>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">City</label>
                                            <input type="text" class="form-control" placeholder="Enter the residing city" asp-for="FutsalCity" autocomplete="off" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12 pt-2 mb-2">
                                        <h5 class="text-muted">SPOC for Proposed Futsal Project and Contact Details</h5>
                                    </div>
                                    <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12 mb-2">
                                        @Html.LabelFor(model => model.OwnerUsername, htmlAttributes: new { @class = "form-label required" })<i class="text-info"> (User Name for Registration)</i>
                                        <input type="text" asp-for="OwnerUsername" class="form-control" maxlength="50" placeholder="Enter the owner's username" autocomplete="off" required>
                                    </div>
                                    <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12 mb-2">
                                        <label asp-for="OwnerName" class="form-label required"></label>
                                        <input type="text" asp-for="OwnerName" class="form-control" maxlength="100" placeholder="Enter the contact person name" autocomplete="off" required>
                                    </div>
                                    <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12 mb-2">
                                        <label asp-for="OwnerEmail" class="form-label required"></label>
                                        <input type="text" asp-for="OwnerEmail" class="form-control" maxlength="50" placeholder="Enter the email address" autocomplete="off" required>
                                    </div>
                                    <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12 mb-2">
                                        <label asp-for="OwnerPhoneNumber" class="form-label required"></label>
                                        <input type="text" asp-for="OwnerPhoneNumber" maxlength="10" placeholder="Enter the mobile number" class="form-control" autocomplete="off" required>
                                    </div>
                                    <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12 mb-2">
                                        <label for="example-fileinput" class="form-label">Profile Image</label>
                                        <input type="file" id="example-fileinput" class="form-control" asp-for="OwnerProfileImage" required>
                                    </div>
                                </div>
                                <div class="row mt-4">
                                    <div class="col-xxl-12 col-xl-12 col-lg-12 col-md-12 col-sm-12 mb-3">
                                        <div class="row mb-2">
                                            <div class="col-6 mb-2">
                                                <h5 class="text-muted">Futsal Courts</h5>
                                            </div>
                                            <div class="col text-end">
                                                <button class="btn btn-info" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Add a New Court" type="submit" name="button" value="court">
                                                    <i class="mdi mdi-plus-circle me-1"></i> Add Court
                                                </button>
                                            </div>
                                        </div>
                                        <div id="div-court-grid">
                                            <partial name="_Courts" model="Model"/>
                                        </div>
                                        <div class="text-danger">
                                            Note: Please upload the images once you have finalized your court counts and description.
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <button type="submit" name="button" value="register" class="btn btn-success" data-bs-toggle="tooltip" data-bs-placement="top"
                                        data-bs-custom-class="success-tooltip" data-bs-title="Click here, to submit your request">
                                    Register
                                </button>

                            </div>
                        </div>
                    </form>
                </div> 
            </div>
        </div>
    </div> 
</div>

<script type="text/javascript">
    function onSuccess(data){
        if (data.result === 1){
            $("#div-court-grid").html(data.htmlData);
        }
        else {
            window.location.href = "@Url.Action("Index", "Futsal")";
        }
    }
</script>