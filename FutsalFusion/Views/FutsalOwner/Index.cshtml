@model List<FutsalFusion.Application.DTOs.Futsal.FutsalOwnerResponseDto>

@{
    ViewData["Title"] = "Futsal Owners";
}

<div class="content-page">
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Futsal Fusion</a></li>
                                <li class="breadcrumb-item active">Futsal Owners</li>
                            </ol>
                        </div>
                        <h4 class="page-title">Futsal Owners</h4>
                    </div>
                </div>
            </div>
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-6 col-xxl-3">
                        <div class="card">
                            <div class="card-body">
                                <div class="dropdown float-end">
                                    <a href="#" class="dropdown-toggle arrow-none card-drop" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="mdi mdi-dots-horizontal"></i>
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-end">
                                        <a href="javascript:void(0);" class="dropdown-item">View Profile</a>
                                        <a href="javascript:void(0);" class="dropdown-item">Project Info</a>
                                    </div>
                                </div>

                                <div class="text-center">
                                    <img src="~/user-images/@item.ImageURL" class="rounded-circle avatar-md img-thumbnail" alt="friend">
                                    <h4 class="mt-3 my-1">
                                        <a class="text-reset">@item.Name
                                            @if (item.IsActive)
                                            {
                                                <i class="mdi mdi-check-decagram text-success"></i>
                                            }
                                            else
                                            {
                                                <i class="mdi mdi-alert-decagram text-danger"></i>
                                            }
                                        </a>
                                    </h4>
                                    <p class="mb-0 text-muted">
                                        <i class="mdi mdi-email-outline me-1"></i>@item.Email
                                    </p>
                                    <hr class="bg-dark-lighten my-3">
                                    <p class="mb-0 text-muted">
                                        @item.FutsalName
                                    </p>
                                    <p class="mb-0 fst-italic">
                                        @item.FutsalLocation
                                    </p>
                                    <h5 class="mt-3 fw-semibold text-muted">
                                        <b>@item.TotalAppointments</b> Booking Projects
                                    </h5>
                                    <div class="row mt-3">
                                        <div class="col-6">
                                            <a href="javascript:void(0);" class="btn w-100 btn-light" data-bs-toggle="tooltip" data-bs-placement="top" title="+977 - @item.PhoneNumber"><i class="mdi mdi-phone"></i></a>
                                        </div>
                                        <div class="col-6">
                                            <a href="javascript:void(0);" class="btn w-100 btn-light" data-bs-toggle="tooltip" data-bs-placement="top" title="@item.Email"><i class="mdi mdi-email-outline"></i></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="row py-4">
                <div class="col-12 text-center">
                    <i class="mdi mdi-dots-circle mdi-spin font-24 text-muted"></i>
                </div>
            </div>
        </div> 
    </div> 
</div>